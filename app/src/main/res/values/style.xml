<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="OnBoardingView">

    </declare-styleable>

    <style name="OnBoardTextButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@color/search_bg_color</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorDisabled</item>
        <item name="android:tint">@color/textColorPrimary</item>
    </style>
    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyTextButton.Options">
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">start</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize25Percent" parent="">
        <item name="cornerSize">25%</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetDialogAnimation</item>
    </style>

    <style name="BottomSheetDialogAnimation">
    </style>

</resources>